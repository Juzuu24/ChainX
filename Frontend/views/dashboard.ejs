<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- Make pages render at device width on mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .alert.success { background: #d4edda; color: #155724; padding: 10px; border-radius: 4px; margin: 10px 0; }
    .alert.error   { background: #f8d7da; color: #721c24; padding: 10px; border-radius: 4px; margin: 10px 0; }
  </style>
</head>
<body>

  <!-- Show session message if present -->
  <% if (message) { %>
    <div class="alert <%= message.type %>">
      <%= message.text %>
    </div>
  <% } %>

  <!-- Header: single flex row so bell never wraps -->
  <main class="page-content">
    <header class="header">
      <div class="logo">
        <img src="/source/logo.png" alt="Logo" class="logo">
      </div>
      <div class="brand">CHAINX</div>
      <div class="search-bar">
        <i class="fas fa-bars"></i>
        <input type="text" placeholder="Search">
        <i class="fas fa-search"></i>
      </div>
      <i class="fas fa-bell notification-icon"></i>
    </header>

    <div class="stats">
  
  <!-- Chart Card -->
  <div class="card" style="padding:0;overflow:hidden;height:400px;">
    <div class="tradingview-widget-container" style="width:100%;height:100%;">
      <div class="tradingview-widget-container__widget" style="width:100%;height:100%;"></div>
  <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-symbol-overview.js" async>
  {
  "lineWidth": 2,
  "lineType": 0,
  "chartType": "area",
  "fontColor": "rgb(106, 109, 120)",
  "gridLineColor": "rgba(46, 46, 46, 0.06)",
  "volumeUpColor": "rgba(34, 171, 148, 0.5)",
  "volumeDownColor": "rgba(247, 82, 95, 0.5)",
  "backgroundColor": "#ffffff",
  "widgetFontColor": "#0F0F0F",
  "upColor": "#22ab94",
  "downColor": "#f7525f",
  "borderUpColor": "#22ab94",
  "borderDownColor": "#f7525f",
  "wickUpColor": "#22ab94",
  "wickDownColor": "#f7525f",
  "colorTheme": "light",
  "isTransparent": false,
  "locale": "en",
  "chartOnly": false,
  "scalePosition": "right",
  "scaleMode": "Normal",
  "fontFamily": "-apple-system, BlinkMacSystemFont, Trebuchet MS, Roboto, Ubuntu, sans-serif",
  "valuesTracking": "1",
  "changeMode": "price-and-percent",
  "symbols": [
    [
      "FX:EURUSD|1D"
    ],
    [
      "BINANCE:BTCUSDT|1D"
    ],
    [
      "BINANCE:SOLUSDT|1D"
    ]
  ],
  "dateRanges": [
    "1d|1",
    "1m|30",
    "3m|60",
    "12m|1D",
    "60m|1W",
    "all|1M"
  ],
  "fontSize": "10",
  "headerFontSize": "medium",
  "autosize": false,
  "width": "100%",
  "height": "100%",
  "noTimeScale": false,
  "hideDateRanges": false,
  "hideMarketStatus": false,
  "hideSymbolLogo": false
}
  </script>
</div>

  </div>
</div>



    <div class="stats">
      <div class="card">
  <i class="fas fa-coins"></i>
        <p>BALANCE<br><strong><%= balance %></strong></p>
      </div>
      <div class="card">
        <i class="fas fa-wallet"></i>
        <p>Monthly CashIn<br><strong><%= monthlyCashIn %></strong></p>
      </div>
      <div class="card">
        <i class="fas fa-sack-dollar"></i>
        <p>Monthly CashOut<br><strong><%= monthlyCashOut %></strong></p>
      </div>
    </div>

    <div class="feature-grid">
      <a href="/withdraw" class="feature-item">
        <div class="icon-circle"><i class="fas fa-money-bill-wave"></i></div>
        <span>Withdraw</span>
      </a>
      <a href="/deposit" class="feature-item">
        <div class="icon-circle"><i class="fas fa-coins"></i></div>
        <span>Deposit</span>
      </a>
      <a href="/event" class="feature-item">
        <div class="icon-circle"><i class="fas fa-receipt"></i></div>
        <span>Events</span>
      </a>
      <a href="/checkin" class="feature-item">
        <div class="icon-circle"><i class="fas fa-clipboard-check"></i></div>
        <span>Daily Check-in</span>
      </a>
      <a href="/order" class="feature-item">
        <div class="icon-circle"><i class="fas fa-cart-plus"></i></div>
        <span>Order</span>
      </a>
      <a href="/service" class="feature-item">
        <div class="icon-circle"><i class="fas fa-clipboard-list"></i></div>
        <span>Service</span>
      </a>
      <a href="/aboutus" class="feature-item">
        <div class="icon-circle"><i class="fas fa-coins"></i></div>
        <span>About Us</span>
      </a>
      <a href="/faq" class="feature-item">
        <div class="icon-circle"><i class="fas fa-receipt"></i></div>
        <span>FAQs</span>
      </a>
    </div>

<!-- ...existing code... -->

  </main>

  <!-- Include footer partial directly (no extra wrapper) -->
  <%- include('partials/footer', { active: 'dashboard' }) %>
</body>
</html>